<h1><%= @product.name %></h1>
<div id="image" class="pull-left container">
    <p>
      <b>Image:</b>  <br />
      <%= link_to image_tag("Products/" + @product.id.to_s + ".jpg", :size => "120x160") %>
    </p>
</div>
<div>
  <p>
    <b>Designer:</b>    <br />
     <%= @product.designer %>
    </p>

    <p>
      <b>Category:</b>  <br />
      <%= @product.category %>
    </p>

    <p>
      <b>Name:</b>      <br />
      <%= @product.name %>
    </p>

    <p>
      <b>Description:</b>   <br />
      <%= @product.description %>
    </p>

    <p>
      <b>Price:</b>         <br />
      <%= number_to_currency(@product.price, :unit => '&euro;', :precision => 2) %>

    </p>


</div>
